<%= render 'home/header' %>

<%= render 'sidebar' %>

<div id="content">
	<%= image_tag("1500x200.png", class: "content_image") %>
	<% if params[:category_id] == "0" %>
		<div class="search">
			<h2>Search Results for '<%= params[:search_keywords] %>'</h2>
			<% if @search.size.zero? %>
		      <p>No products found.</p>
			<% else %>
			    <p><%= pluralize(@search.size, 'Product') %> Found. </p>
			    <%= render partial: 'products', collection: @search %>
			<% end %>
		</div>
	<% else %>
		<div class="search">
		<h2>Search Results for '<%= params[:search_keywords] %>'</h2>
		<% if @category_search.size.zero? %>
	      <p>No products found.</p>
		<% else %>
		    <p><%= pluralize(@category_search.size, 'Product') %> Found in <%= Category.find(id = params[:category_id]).name %>. </p>
            <%= render partial: 'products', collection: @category_search %>
		<% end %>
	</div>
	<% end %>
</div>