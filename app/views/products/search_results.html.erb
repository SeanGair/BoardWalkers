<%= render 'home/header' %>

<%= render 'sidebar' %>

<div id="content">
	<%= image_tag("1500x200.png", class: "content_image") %>
	<div class="search">
		<h2>Search Results for '<%= params[:search_keywords] %>'</h2>
		<% if @search.size.zero? %>
	      <p>No products found.</p>
		<% else %>
		  <p><%= pluralize(@search.size, 'Product') %> Found. </p>
		  <%= render partial: 'products', collection: @search %>
		<% end %>
	</div>
	<div class="search">
		<% if @category_search.size.zero? %>
	      <p>No categories found.</p>
		<% else %>
	      <p><%= pluralize(@category_search.size, 'Category') %> Found. </p>
		  <p>link to category</p>
		<% end %>
	</div>
</div>